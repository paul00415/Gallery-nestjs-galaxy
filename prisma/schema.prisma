generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String?

  googleId     String? @unique

  refreshToken String?  @db.Text

  isEmailVerified Boolean @default(false)
  createdAt    DateTime @default(now())

  // Keep only this, no duplicates:
  photos Photo[] @relation("UserPhotos")
}

model Photo {
  id        Int      @id @default(autoincrement())
  title     String
  desc      String
  imageUrl  String
  createdAt DateTime @default(now())

  posterId Int
  poster   User @relation("UserPhotos", fields: [posterId], references: [id], onDelete: Cascade)
}
