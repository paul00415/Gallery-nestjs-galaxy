generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")

}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  photos    Photo[]
}

model Photo {
  id        Int      @id @default(autoincrement())
  title     String
  desc      String
  imageUrl  String
  createdAt DateTime @default(now())

  posterId  Int
  poster    User     @relation(fields: [posterId], references: [id], onDelete: Cascade)

  @@index([posterId])
}
